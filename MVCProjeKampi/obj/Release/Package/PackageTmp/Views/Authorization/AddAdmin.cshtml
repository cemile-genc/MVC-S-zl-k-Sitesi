@model EntityLayer.Concrete.Admin

@{
    ViewBag.Title = "AddAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<h1>Yeni Admin Ekleme Sayfası</h1>

<br />
@*Burası bi butona tıklayıp sayfaya bi post gönderildiği zaman çalışır*@
@using (Html.BeginForm("AddAdmin", "Authorization", FormMethod.Post))
{

    <div class="form-group">
        @Html.Label("Admin Kullanıcı Adı")
        @Html.TextBoxFor(x => x.AdminName, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.AdminName)
        <br /> <br />
        @Html.Label("Şifreyi Giriniz")
        @Html.TextBoxFor(x => x.AdminPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.AdminPassword)
        <br /> <br />
        @Html.Label("Adminin rolünü yazınız")
        @Html.DropDownListFor(c => c.RoleId, (List<SelectListItem>)ViewBag.valueadmin, new { @class = "form-control" })


        <button class="btn btn-primary" id="btn1">Kaydet</button>
        <script>
            $('#btn1').click(function () {
                swal("Tebrikler!", "Başarılı bir şekilde eklendi!", "başarılı");
            });
        </script>

        @*<button class="btn btn-primary">Kaydet</button>*@

    </div>
}




