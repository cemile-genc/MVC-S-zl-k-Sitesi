@model EntityLayer.Concrete.Admin

@{
    ViewBag.Title = "EditAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<h2>Admin Yetki Güncelle</h2>
@using (Html.BeginForm("EditAdmin", "Authorization", FormMethod.Post))
{

    <div class="form-group">
        @Html.HiddenFor(x => x.AdminId, new { @class = "form-control" })
        @Html.Label("Admin Mail")
        @Html.TextBoxFor(x => x.AdminName, new { @class = "form-control" })
        <br /> <br />
        @Html.Label("Rol")
        @Html.DropDownListFor(c => c.AdminRole, (List<SelectListItem>)ViewBag.valueadmin, new { @class = "form-control" })

        <button class="btn btn-primary" id="btn1">Güncelle</button>
        <script>
            $('#btn1').click(function () {
                swal("Güncelleme işlemi başarılı!", "başarılı");
            });
        </script>
    </div>
}


