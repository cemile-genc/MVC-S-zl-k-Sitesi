
@{
    ViewBag.Title = "SweetAlert";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>SweetAlert</h2>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<button class="btn btn-primary" id="btn1">Button 1</button>
<button class="btn btn-warning" id="btn2">Button 2</button>
<button class="btn btn-danger" id="btn3">Button 3</button>
<script>
    $('#btn1').click(function () {
        swal("Merhaba MVC Proje Kampı!");
    });
</script>
<script>
    $('#btn2').click(function () {
        swal("MVC Proje Kampı!", "...ders görevi!");
    });
</script>
<script>
    $('#btn3').click(function () {
        swal("Tebrikler!", "Başarılı bir şekilde eklendi!", "başarılı");
    });
</script>
