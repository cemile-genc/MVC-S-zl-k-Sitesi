@model EntityLayer.Concrete.Category
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<!DOCTYPE html>

<h1>Yeni Kategori Ekleme Sayfası</h1>

<br />
@*Burası bi butona tıklayıp sayfaya bi post gönderildiği zaman çalışır*@
@using(Html.BeginForm("AddCategory","Category",FormMethod.Post))
 {
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.CategoryName)@*x değeri category tablosunun name değerine eşitlenecek*@
        @Html.ValidationMessageFor(x => x.CategoryName)
        @*input yerine helper kullanma nedeni harf eksikliğinden kaynaklanan hata oranı daha az*@
        <br /> <br />
        @Html.Label("Açıklama")
        @Html.TextBoxFor(x => x.CategoryDescriptionu)
        @Html.ValidationMessageFor(x => x.CategoryDescriptionu)
        @*bu şekilde validator şartlarını da entegre etmiş oldum*@

        <br /> <br />
        <button>Kaydet</button>

    </div>
 }


